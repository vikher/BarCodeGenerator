<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WaterwayBarCodeGenerator"
             x:Class="WaterwayBarCodeGenerator.MainPage">

    <StackLayout VerticalOptions="Center" Margin="20">
        <Entry x:Name="emailEntry" Placeholder="Email address" Keyboard="Email"/>
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="LogIn" Margin="0,50,0,0" Text="Log In" BackgroundColor="DodgerBlue" TextColor="white" Clicked="LogIn_Clicked"/>
    </StackLayout>

</ContentPage>
